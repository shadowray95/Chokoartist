<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity"
    android:background="@drawable/background3">

    <EditText
        android:id="@+id/register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/input_design"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="17sp"
        android:hint="Name"
        android:textStyle="bold">
    </EditText>

    <EditText
        android:id="@+id/register_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/register_name"
        android:background="@drawable/input_design"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="17sp"
        android:hint="Phone Number"
        android:textStyle="bold"
        android:inputType="number">
    </EditText>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/register_phone_no"
        android:background="@drawable/input_design"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="17sp"
        android:hint="Password"
        android:textStyle="bold"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:id="@+id/register_referral_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/register_password"
        android:background="@drawable/input_design"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="17sp"
        android:hint="Referral Phone Number"
        android:textStyle="bold">
    </EditText>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_referral_phone"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="R E G I S T E R"
        android:textColor="@android:color/white"
        >
    </Button>

</RelativeLayout>