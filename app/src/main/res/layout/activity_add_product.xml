<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddProductActivity"
    android:background="@drawable/background6"
    >

    <ImageView
        android:id="@+id/add_product_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/male_user_icon"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:scaleType="fitCenter">
    </ImageView>

    <EditText
        android:id="@+id/add_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_image"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:hint="Product Name"
        android:textColorHint="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </EditText>

    <EditText
        android:id="@+id/add_product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_name"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:hint="Product Description"
        android:textColorHint="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </EditText>

    <EditText
        android:id="@+id/add_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_description"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_design"
        android:hint="Product Price in Rupees"
        android:textColorHint="@color/colorPrimary"
        android:padding="20dp"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </EditText>

    <Button
        android:id="@+id/add_product_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_product_price"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:text="Add Product"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    </Button>


</RelativeLayout>